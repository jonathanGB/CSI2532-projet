{{#if name}}
<h3>Wazzup {{name}}</h3>
{{/if}}

<div class="text-center" id="loginContainer">
  <h2 class="text-center">Inscription au portail</h2>
  <img src="/public/img/separator.png" alt="separator" />
  <form role="form" class="form-inline">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary">
        <input type="radio" name="options" id="medecin" autocomplete="off"> Médecin
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" id="secretaire" autocomplete="off"> Secrétaire
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" id="patient" autocomplete="off"> Patient
      </label>
    </div>
    <br>
    <div id="medecinForm" class="startHide persoForm">
      <div class="form-group">
        <input type="email" class="form-control input-lg" placeholder="email">
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" placeholder="password">
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-lg">Envoyer <span class="glyphicon glyphicon-send"></span></button>
    </div>
    <div id="secretaireForm" class="startHide persoForm">
      <div class="form-group">
        <input type="email" class="form-control input-lg" placeholder="email">
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" placeholder="password">
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-lg">Envoyer <span class="glyphicon glyphicon-send"></span></button>
    </div>
    <div id="patientForm" class="startHide persoForm">
      <div class="form-group">
        <input type="email" class="form-control input-lg" placeholder="email">
      </div>
      <div class="form-group">
        <input type="password" class="form-control input-lg" placeholder="password">
      </div>
      <br>
      <button type="submit" class="btn btn-success btn-lg">Envoyer <span class="glyphicon glyphicon-send"></span></button>
    </div>
  </form>
</div>

<script src="/public/script/login.js"></script>
